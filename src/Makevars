PKG_CPPFLAGS=-DSTRICT_R_HEADERS -I"$(R_HOME)/include"
PKG_LIBS = -L"$(R_HOME)/bin/x64" -lz

SRC=$(wildcard GenForm-svn/*.cpp)
OBJECTS_GF=$(SRC:.cpp=.o)
DEST_GF=GenForm

CXX_STD = CXX11

.PHONY: all clean inst

all: GenForm $(SHLIB)

GenForm: $(OBJECTS_GF)
	$(CXX) -o $(DEST_GF) $(OBJECTS_GF)

clean:
	rm -rf $(OBJECTS_GF) $(DEST_GF) $(SHLIB) $(OBJECTS)
