PKG_CPPFLAGS=-DSTRICT_R_HEADERS

SRC=$(wildcard GenForm-svn/*.cpp)
OBJECTS_GF=$(SRC:.cpp=.o)
DEST_GF=GenForm

CXX_STD = CXX14
PKG_LIBS = -lgomp
PKG_CXXFLAGS = -fopenmp

.PHONY: all clean inst

all: GenForm $(SHLIB)

GenForm: $(OBJECTS_GF)
	$(CXX) -o $(DEST_GF) $(OBJECTS_GF)

clean:
	rm -rf $(OBJECTS_GF) $(DEST_GF) $(SHLIB) $(OBJECTS)
